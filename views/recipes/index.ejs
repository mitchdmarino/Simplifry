<div class="bg-yellow-100">
    <h2 class="text-6xl">Your Recipes</h2>

    <div id="recipe-actions-container" class="flex flex-row-reverse mx-2 bg-yellow-100">
        <a href="/recipes/new" class="mx-2"><button class="bg-red-400 border-solid border-red-900 border-2">Add Recipe</button></a>
        <a href="/categories" class="flex-end"><button class="bg-red-400 border-solid border-red-900 border-2">View Categories</button></a>
    </div>
    <div id="recipe-container" class="bg-yellow-100 flex flex-row flex-wrap">
            <% recipes.forEach(recipe => { %>
                <div class="w-1/2 my-5 " >
                    <a href="/recipes/<%=recipe.id%>" class="mx-auto block p-6 max-w-sm bg-white rounded-lg border border-gray-200 shadow-md hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%=recipe.name%></h5>
                    <p class="font-normal text-gray-700 dark:text-gray-400"><%=recipe.story%></p>
                    </a>
                </div>
            
            </br>
            <% }) %>
    </div>
    
</div>



